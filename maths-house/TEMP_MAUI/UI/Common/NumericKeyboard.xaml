<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GCMS.MathHouse.UI.Common.NumericKeyboard">

    <Frame BackgroundColor="#F8F9FA"
           BorderColor="LightGray"
           CornerRadius="15"
           Padding="{OnIdiom Phone=15, Tablet=20}"
           HorizontalOptions="Center"
           MaximumWidthRequest="{OnIdiom Phone=350, Tablet=450}">
        <Grid RowSpacing="{OnIdiom Phone=8, Tablet=12}"
              ColumnSpacing="{OnIdiom Phone=8, Tablet=12}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Row 1: 1, 2, 3 -->
            <Button Grid.Row="0" Grid.Column="0" Text="1" Clicked="OnNumberClicked" 
                    BackgroundColor="#E3F2FD" TextColor="#1976D2" FontSize="{OnIdiom Phone=24, Tablet=30}"
                    HeightRequest="{OnIdiom Phone=50, Tablet=65}" CornerRadius="8" />
            <Button Grid.Row="0" Grid.Column="1" Text="2" Clicked="OnNumberClicked"
                    BackgroundColor="#E3F2FD" TextColor="#1976D2" FontSize="{OnIdiom Phone=24, Tablet=30}"
                    HeightRequest="{OnIdiom Phone=50, Tablet=65}" CornerRadius="8" />
            <Button Grid.Row="0" Grid.Column="2" Text="3" Clicked="OnNumberClicked"
                    BackgroundColor="#E3F2FD" TextColor="#1976D2" FontSize="{OnIdiom Phone=24, Tablet=30}"
                    HeightRequest="{OnIdiom Phone=50, Tablet=65}" CornerRadius="8" />

            <!-- Row 2: 4, 5, 6 -->
            <Button Grid.Row="1" Grid.Column="0" Text="4" Clicked="OnNumberClicked"
                    BackgroundColor="#E3F2FD" TextColor="#1976D2" FontSize="{OnIdiom Phone=24, Tablet=30}"
                    HeightRequest="{OnIdiom Phone=50, Tablet=65}" CornerRadius="8" />
            <Button Grid.Row="1" Grid.Column="1" Text="5" Clicked="OnNumberClicked"
                    BackgroundColor="#E3F2FD" TextColor="#1976D2" FontSize="{OnIdiom Phone=24, Tablet=30}"
                    HeightRequest="{OnIdiom Phone=50, Tablet=65}" CornerRadius="8" />
            <Button Grid.Row="1" Grid.Column="2" Text="6" Clicked="OnNumberClicked"
                    BackgroundColor="#E3F2FD" TextColor="#1976D2" FontSize="{OnIdiom Phone=24, Tablet=30}"
                    HeightRequest="{OnIdiom Phone=50, Tablet=65}" CornerRadius="8" />

            <!-- Row 3: 7, 8, 9 -->
            <Button Grid.Row="2" Grid.Column="0" Text="7" Clicked="OnNumberClicked"
                    BackgroundColor="#E3F2FD" TextColor="#1976D2" FontSize="{OnIdiom Phone=24, Tablet=30}"
                    HeightRequest="{OnIdiom Phone=50, Tablet=65}" CornerRadius="8" />
            <Button Grid.Row="2" Grid.Column="1" Text="8" Clicked="OnNumberClicked"
                    BackgroundColor="#E3F2FD" TextColor="#1976D2" FontSize="{OnIdiom Phone=24, Tablet=30}"
                    HeightRequest="{OnIdiom Phone=50, Tablet=65}" CornerRadius="8" />
            <Button Grid.Row="2" Grid.Column="2" Text="9" Clicked="OnNumberClicked"
                    BackgroundColor="#E3F2FD" TextColor="#1976D2" FontSize="{OnIdiom Phone=24, Tablet=30}"
                    HeightRequest="{OnIdiom Phone=50, Tablet=65}" CornerRadius="8" />

            <!-- Row 4: Delete, 0, OK -->
            <Button Grid.Row="3" Grid.Column="0" x:Name="DeleteButton" Text="⌫" Clicked="OnDeleteClicked"
                    BackgroundColor="#FFECB3" TextColor="#F57F17" FontSize="{OnIdiom Phone=24, Tablet=30}"
                    HeightRequest="{OnIdiom Phone=50, Tablet=65}" CornerRadius="8" />
            <Button Grid.Row="3" Grid.Column="1" Text="0" Clicked="OnNumberClicked"
                    BackgroundColor="#E3F2FD" TextColor="#1976D2" FontSize="{OnIdiom Phone=24, Tablet=30}"
                    HeightRequest="{OnIdiom Phone=50, Tablet=65}" CornerRadius="8" />
            <Button Grid.Row="3" Grid.Column="2" x:Name="OkButton" Text="✔️" Clicked="OnOkClicked"
                    BackgroundColor="#C8E6C9" TextColor="#388E3C" FontSize="{OnIdiom Phone=20, Tablet=26}"
                    HeightRequest="{OnIdiom Phone=50, Tablet=65}" CornerRadius="8" FontAttributes="Bold" />
        </Grid>
    </Frame>
</ContentView>